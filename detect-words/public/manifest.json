{
  "manifest_version": 3,
  "name": "Detect Bad Words",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["activeTab","scripting","storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["http://*/*", "https://*/*"]
}
